<converters>
    <converter type="staroffice/sxw" version="1.0">
        <converter-display-name>
            LaTeX 2e
        </converter-display-name>
        <converter-description>
            OpenOffice Writer XML to LaTeX 2e conversion
        </converter-description>
        <converter-vendor>
            Henrik Just (henrikjust@openoffice.org)
        </converter-vendor>
        <converter-class-impl>
            writer2latex.latex.PluginFactoryImpl
        </converter-class-impl>
        <converter-target type="application/x-latex" />
    </converter>

    <converter type="staroffice/sxw" version="1.0">
        <converter-display-name>
            BibTeX data file
        </converter-display-name>
        <converter-description>
            OpenOffice Writer XML to BibTeX conversion
        </converter-description>
        <converter-vendor>
            Henrik Just (henrikjust@openoffice.org)
        </converter-vendor>
        <converter-class-impl>
            writer2latex.bibtex.PluginFactoryImpl
        </converter-class-impl>
        <converter-target type="application/x-bibtex" />
    </converter>

    <converter type="staroffice/sxw" version="1.0">
        <converter-display-name>
            XHTML 1.0 strict
        </converter-display-name>
        <converter-description>
            OpenOffice Writer XML to XHTML 1.0 strict conversion
        </converter-description>
        <converter-vendor>
            Henrik Just (henrikjust at openoffice.org)
        </converter-vendor>
        <converter-class-impl>
            writer2latex.xhtml.Xhtml10PluginFactoryImpl
        </converter-class-impl>
        <converter-target type="text/html" />
    </converter>

    <converter type="staroffice/sxc" version="1.0">
        <converter-display-name>
            XHTML 1.0 strict (calc)
        </converter-display-name>
        <converter-description>
            OpenOffice Calc XML to XHTML 1.0 strict conversion
        </converter-description>
        <converter-vendor>
            Henrik Just (henrikjust at openoffice.org)
        </converter-vendor>
        <converter-class-impl>
            writer2latex.xhtml.Xhtml10CalcPluginFactoryImpl
        </converter-class-impl>
        <converter-target type="text/html" />
    </converter>

    <converter type="staroffice/sxw" version="1.0">
        <converter-display-name>
            XHTML 1.1 + MathML 2.0
        </converter-display-name>
        <converter-description>
            OpenOffice Writer XML to XHTML 1.1 + MathML 2.0 conversion
        </converter-description>
        <converter-vendor>
            Henrik Just (henrikjust at openoffice.org)
        </converter-vendor>
        <converter-class-impl>
            writer2latex.xhtml.PluginFactoryImpl
        </converter-class-impl>
        <converter-target type="application/xhtml+xml" />
    </converter>

    <converter type="staroffice/sxw" version="1.0">
        <converter-display-name>
            XHTML 1.1 + MathML 2.0 (xsl)
        </converter-display-name>
        <converter-description>
            OpenOffice Writer XML to XHTML 1.1 + MathML 2.0 (xsl) conversion
        </converter-description>
        <converter-vendor>
            Henrik Just (henrikjust at openoffice.org)
        </converter-vendor>
        <converter-class-impl>
            writer2latex.xhtml.XslPluginFactoryImpl
        </converter-class-impl>
        <converter-target type="application/xml" />
    </converter>
</converters>

